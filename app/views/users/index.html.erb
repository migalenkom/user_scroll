<p id="notice">
  <%= notice %>
</p>

<h1>Users</h1>

<table class="table sortable">
  <thead>
    <tr>
      <th><%= sortable "firstname" %></th>
      <th><%= sortable "lastname" %></th>
      <th><%= sortable "email" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id='users'>
    <%= render @users %>
  </tbody>
</table>
<%= paginate @users %>
<br>
<%= link_to 'New User', new_user_path %>
